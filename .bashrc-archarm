#
# Extra .bashrc for Arch Linux ARM
#

# alias for using pacman and no confirm
alias i='sudo pacman -S --noconfirm'

# vcgencmd stuff
alias vctemp='/opt/vc/bin/vcgencmd measure_temp'
alias vccore='/opt/vc/bin/vcgencmd measure_clock'

# alias for project folders
alias hmm='cd /srv/http/backup/projects/urlname/'
alias hmma='cd /srv/http/backup/alex/alexdewekker/2'
# some ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'