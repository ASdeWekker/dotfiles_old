#
# Standard added .bashrc file
#

# going into the project folders
alias hmm='cd /var/www/html/backup/projects/urlname'
alias hmma='cd /var/www/html/backup/alex/alexdewekker/2'

# Starting services: pug, npm & compass
alias startn='clear && npm start'
alias starts='clear && compass watch'
alias startp='clear && pug -wP index.pug index.html'

# reload .bashrc
alias reload-bash='source ~/.bashrc'

# connecting quickly to the server
alias sshserv='ssh -C alex@servertje'

# shortcut for checking systemctl status
alias syss='sudo systemctl'

# how to git gud and other helpful git things
alias git-gud='git push'
alias gs='git status'
alias ga='git add -A'
alias gc='git commit -m'
alias gp='git pull'

# nmap shortcut for this network
alias nmapp='nmap -sP 192.168.1.*'

# history shortcut
alias hh='history'

# sensors and stuff
alias sens='sensors | grep Core*'

# use mongodb as admin
alias mongaats='mongo -u alex -p naanab --authenticationDatabase admin'

# ssh into the thinkpad
# ssh into ubunduuuu
alias sshuu='ssh -C alex@ubunduuuu'
alias sshtp='ssh -C alex@atpaats'

# set a fancy prompt color
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

# tmux aliases
# attach shortcut
alias tat='tmux attach -t'
# session check shortcut
alias tls='tmux list-sessions'
# make tmuxinator work
source ~/.bin/tmuxinator.bash
# tmuxinator shortcut
alias tmx='tmuxinator'
