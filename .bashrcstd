#
# Standard added .bashrc file
#

# Starting services: pug, npm & compass
alias startn='clear && npm start'
alias starts='clear && compass watch'
alias startp='clear && pug -wP index.pug index.html'

# reload .bashrc
alias reload-bash='source ~/.bashrc'

# connecting quickly to the server
alias sshserv='ssh -C alex@servertje'

# shortcut for checking systemctl status
alias syss='sudo systemctl'

# how to git gud and other helpful git things
alias git-gud='git push'
alias gs='git status'
alias ga='git add -A'
alias gc='git commit -m'
alias gp='git pull'


# nmap shortcut for this network
alias nmapp='nmap 192.168.1.0/24'
