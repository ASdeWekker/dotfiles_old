#
# Extra .bashrc for Arch Linux ARM
#

# alias for using pacman and no confirm
alias i='sudo pacman -S --noconfirm'
alias iy='yaourt -S'

# vcgencmd stuff
alias vctemp='/opt/vc/bin/vcgencmd measure_temp'
alias wtemp='watch /opt/vc/bin/vcgencmd measure_temp'
alias vccore='/opt/vc/bin/vcgencmd measure_clock'

# alias for project folders
alias hmm='cd /usr/share/nginx/html/backup/projects/urlname/'
alias hmma='cd /usr/share/nginx/html/backup/alex/alexdewekker/2'
# some ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# fixed the ruby path for installing gems
PATH="$(ruby -e 'print Gem.user_dir')/bin:$PATH"

# ssh into ubunduuuu with .85 ip
alias sshuu='ssh -C alex@192.168.1.85'
