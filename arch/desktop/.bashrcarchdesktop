#
# Bashrc for Arch Linux on the Desktop x86/64
#

#powerline-daemon -q 
#POWERLINE_BASH_CONTINUATION=1 
#POWERLINE_BASH_SELECT=1 
#. /usr/share/powerline/bindings/bash/powerline.sh

# set neovim as editor?
export EDITOR=nvim
export VISUAL=nvim

# alias for vim and nvim
alias vim='nvim'
alias vimm='/usr/bin/vim'
alias subl='subl3'
alias iiaa='inputattach'

# customize the prompt
green="\[$(tput setaf 2)\]"
blue="\[$(tput setaf 4)\]"
reset="\[$(tput sgr0)\]"
bgwhite="\[$(tput setab 0)\]"
boldon="\[$(tput bold)\]"
if [ $(id | cut -d '(' -f2 | cut -d ')' -f1) == "root" ]; then
    userc="\[$(tput setaf 1)\]"
else
    userc="\[$(tput setaf 4)\]"
fi
export PS1="${boldon}${bgwhite}${blue}(_)_)::${userc}\u${blue}@\h::D${green}~~\w ${reset}$ "
alias iidd='inputdetach'
