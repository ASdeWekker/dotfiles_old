#
# Extra .bashrc for Arch Linux ARM
#

# alias for using pacman and no confirm
alias iy='yaourt -S'
alias ui='sudo pacman -Rns --noconfirm'
alias uiy='yaourt -Rc'

# some ls aliases
alias ll='ls -alF'
alias la='ls -AF'
alias l='ls -CF'

# fixed the ruby path for installing gems
PATH="$(ruby -e 'print Gem.user_dir')/bin:$PATH"

# echo the command for looking up service files
alias qql='echo "sudo pacman -Qql package | grep -Fe .service -e .socket"'
