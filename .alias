# suspend the system and then exit the ssh connection.
# doei and doeii
if [ $HOSTNAME == 'pcaats' ]; then
	alias slp='ledstrip off;systemctl suspend'
	alias slpd='slp;exit'
	alias doei='ledstrip off;systemctl poweroff'
	alias sdoei='ledstrip off;sudo systemctl poweroff'
	alias doeii='ledstrip off;systemctl reboot'
	alias sdoeii='ledstrip off;sudo systemctl reboot'
else
	alias slp='systemctl suspend'
	alias slpd='slp;exit'
	alias doei='systemctl poweroff'
	alias sdoei='sudo systemctl poweroff'
	alias doeii='systemctl reboot'
	alias sdoeii='sudo systemctl reboot'
fi

